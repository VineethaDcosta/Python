b=int(input("Enter the number of blocks: "))
l=int(input("Enter the number of lines: "))
s=int(input("Enter the number of stars: "))
for i in range(b):
    print("--------Block[l]---------")
    sum =0
    for i in range(s):
        print("---------Block[i---------]")
        count=0
        for j in range(l-i):
            for k in range(s):
                print("*",end=" ")
                count=count+1
            print()
        print(count)
        sum+=count
    print(f"Total: {sum}")
